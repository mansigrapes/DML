<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/eight_sp"
    android:layout_marginTop="@dimen/two_dp"
    android:layout_marginEnd="@dimen/eight_sp"
    android:layout_marginBottom="@dimen/two_dp"
    android:orientation="horizontal"
    android:padding="@dimen/two_dp"


    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ten_size_black_button_round"
        android:layout_marginStart="@dimen/eight_sp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvSelectFilterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_sp"
            android:textColor="@color/white" />


        <com.dealermela.utility.DmlImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:padding="@dimen/eight_sp"
            android:src="@drawable/ic_cancel_black_24dp"
            android:tint="@color/white" />

    </LinearLayout>

</LinearLayout>