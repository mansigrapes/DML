<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/greentoastcolor"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.4"
                android:gravity="center"
                android:padding="@dimen/five_sp"
                android:layout_marginLeft="@dimen/ten_sp">

                <com.dealermela.utility.DmlTextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product added in download list."
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fifteen_sp" />

                <!--            <Button-->
                <!--                android:id="@+id/gotoWebsiteButton"-->
                <!--                style="@style/Widget.MaterialComponents.Button.TextButton"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_alignParentEnd="true"-->
                <!--                android:text="Goto DownloadList"-->
                <!--                android:textColor="@android:color/black"-->
                <!--                android:textSize="14sp" />-->

                <com.dealermela.utility.DmlTextView
                    android:id="@+id/gotoDownloadList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit Download List"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <com.dealermela.utility.DmlImageView
                android:id="@+id/closeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/ic_baseline_close_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>