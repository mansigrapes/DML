<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:id="@+id/linearlayout_Popularproduct"
    android:orientation="horizontal">

    <!--    android:background="@drawable/background_with_shadow"-->

    <com.dealermela.utility.DmlImageView
        android:id="@+id/imgPopularProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/labelback"
        android:layout_margin="@dimen/one_sp_view"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow" />

<!--    android:background="@drawable/labelback"-->
    <!--  android:scaleType="fitCenter"
    android:background="@color/black"-->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:padding="@dimen/eight_sp"
        tools:text="Title"
        android:textSize="@dimen/twelve_sp"
        android:lines="1"
        android:textColor="?login_signup_text_color"
        android:background="@drawable/labelback"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

</LinearLayout>


