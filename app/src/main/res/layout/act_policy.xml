<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.activity.PolicyAct">

    <include
        android:id="@+id/include9"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dealermela.utility.CustomTabLayout
        android:id="@+id/tabLayoutPolicies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include9"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="?toolbarTextColor"
        app:tabIndicatorColor="?login_signup_text_color"
        app:tabSelectedTextColor="?login_signup_text_color"
        app:tabTextAppearance="@style/OrderCustomTabText"
        app:tabTextColor="?login_signup_text_color"
         />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerPolicies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutPolicies" />

</androidx.constraintlayout.widget.ConstraintLayout>