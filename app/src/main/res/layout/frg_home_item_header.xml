<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    >

    <com.dealermela.utility.DmlImageView
        android:id="@+id/imgMenuIcon"
        android:layout_width="70sp"
        android:layout_height="56sp"
        android:layout_marginStart="@dimen/eight_margin_padding"
        android:layout_marginTop="@dimen/eight_margin_padding"
        android:layout_marginEnd="@dimen/eight_margin_padding"
        android:layout_marginBottom="@dimen/eight_margin_padding"
        android:padding="@dimen/eight_margin_padding"
        android:scaleType="centerInside"
        android:tint="?toolbarTextColor"
        app:layout_constraintBottom_toTopOf="@+id/tvMenuIconName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ring_ic"

        />

    <com.dealermela.utility.DmlTextView
        android:id="@+id/tvMenuIconName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_margin_padding"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="?textViewTextColor"
        android:textSize="@dimen/eight_margin_padding"
        app:layout_constraintEnd_toEndOf="@+id/imgMenuIcon"
        app:layout_constraintStart_toStartOf="@+id/imgMenuIcon"
        app:layout_constraintTop_toBottomOf="@+id/imgMenuIcon"
        app:textAllCaps="true" />

</android.support.constraint.ConstraintLayout>