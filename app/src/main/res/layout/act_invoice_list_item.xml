<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="?transaction_round_back"
        app:cardCornerRadius="@dimen/five_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:padding="@dimen/eight_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvInvoiceNo"
                style="@style/tvInventoryItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invoice No: 15454"
                />

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvCustomerName"
                style="@style/tvInventoryItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name: Pradip Radadiya" />

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvInvoiceDate"
                style="@style/tvInventoryItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invoice Date: 10/02/2020" />

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvAmount"
                style="@style/tvInventoryItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount: Rs.25,120" />

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvStatus"
                style="@style/tvInventoryItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Complete" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>